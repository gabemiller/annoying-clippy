{
  "manifest_version": 3,
  "name": "Annoying Clippy Extensions",
  "description": "A short experimental chrome extension on steroid",
  "version": "2.0",
  "action": {
    "default_icon": {
      "16": "src/assets/icon-16x16.png",
      "32": "src/assets/icon-32x32.png",
      "64": "src/assets/icon-64x64.png",
      "128": "src/assets/icon-128x128.png"
    }
  },
  "icons": {
    "16": "src/assets/icon-16x16.png",
    "32": "src/assets/icon-32x32.png",
    "64": "src/assets/icon-64x64.png",
    "128": "src/assets/icon-128x128.png"
  },
  "background": {
    "service_worker": "src/background.js"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "src/clippy.js"
      ],
      "css": [
        "src/clippy.css"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["src/assets/clippy-sprite.png"],
      "matches": ["<all_urls>"]
    }
  ]
}
